{
  "source": {
      "include": ["api"],
      "includePattern": ".+\\.js(doc|x)?$",
      "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
      "plugins/markdown"
  ],
  "opts": {
      "encoding": "utf8",
      "readme": "./readme.md",
      "destination": "docs/",
      "recurse": true,
      "verbose": true
  }
}
